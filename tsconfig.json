{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    // This allows us to initialize members in the "initialize" method
    "strictPropertyInitialization": false,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
